<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Reviews | Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/admin.css">
</head>
<body class="admin-body">
  <%- include('admin-navbar') %>

  <div class="admin-container">
    <div class="admin-title">Product Reviews</div>
    <div class="admin-subtitle">Moderate feedback and maintain quality.</div>

    <div class="admin-card mt-3">
      <div class="table-responsive admin-table">
        <table class="table table-striped table-bordered align-middle mb-0 text-center">
          <thead>
            <tr>
              <th>ID</th>
              <th>Product</th>
              <th>User</th>
              <th>Rating</th>
              <th>Comment</th>
              <th>Created</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% reviews.forEach(r => { %>
              <tr>
                <td><%= r.id %></td>
                <td><%= r.productName %></td>
                <td><%= r.username %></td>
                <td><%= r.rating %> / 5</td>
                <td><%= (r.comment || '').slice(0, 80) %>...</td>
                <td><%= new Date(r.created_at).toLocaleString() %></td>
                <td>
                  <form method="POST" action="/admin/reviews/<%= r.id %>/delete">
                    <button class="admin-btn admin-btn-danger" onclick="return confirm('Delete this review?')">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
