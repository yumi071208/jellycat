<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart | JellyMart</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/theme.css">
</head>

<body>
  <%- include('navbar') %>

  <div class="container my-5" style="max-width: 1000px;">
    <div class="section-title mb-4">
      <span>Your Cart</span>
      <a href="/shopping">Continue shopping</a>
    </div>

    <% if (cart.length === 0) { %>
      <div class="layout-card text-center">
        <h5 class="mb-2">Your cart is empty</h5>
        <p class="text-muted mb-4">Browse the store and add items you love.</p>
        <a href="/shopping" class="pastel-btn px-4">Start Shopping</a>
      </div>
    <% } else { %>
      <div class="layout-card mb-4">
        <% let total = 0; %>
        <% cart.forEach(item => { %>
          <div class="row align-items-center py-3 border-bottom">
            <div class="col-3 col-md-2 text-center">
              <img src="/images/<%= item.image %>" alt="<%= item.productName %>" class="img-fluid rounded" style="max-height: 80px; object-fit: contain;">
            </div>

            <div class="col-9 col-md-4">
              <strong><%= item.productName %></strong>
              <div class="text-muted small">$<%= Number(item.price).toFixed(2) %> each</div>
            </div>

            <div class="col-6 col-md-2 mt-3 mt-md-0">
              <form action="/cart/update/<%= item.cart_id %>" method="POST">
                <select class="form-select form-select-sm" name="quantity" onchange="this.form.submit()">
                  <% for (let q = 1; q <= Math.max(5, item.quantity); q++) { %>
                    <option value="<%= q %>" <%= item.quantity == q ? 'selected' : '' %>><%= q %></option>
                  <% } %>
                </select>
              </form>
            </div>

            <div class="col-4 col-md-2 mt-3 mt-md-0">
              <strong>$<%= (item.price * item.quantity).toFixed(2) %></strong>
            </div>

            <div class="col-2 col-md-2 text-end mt-3 mt-md-0">
              <a href="/cart/remove/<%= item.cart_id %>" class="pastel-secondary-btn btn-sm">Remove</a>
            </div>
          </div>
          <% total += item.price * item.quantity; %>
        <% }) %>
      </div>

      <div class="layout-card d-flex flex-column flex-md-row justify-content-between align-items-center">
        <div class="mb-3 mb-md-0">
          <h4 class="mb-0">Total: <span class="text-primary">$<%= total.toFixed(2) %></span></h4>
          <p class="text-muted small mb-0">Taxes and discounts calculated at checkout</p>
        </div>

        <div class="d-flex gap-3">
          <a href="/shopping" class="pastel-secondary-btn px-4">Continue Shopping</a>
          <a href="/checkout" class="pastel-btn px-4">Checkout</a>
        </div>
      </div>
    <% } %>
  </div>
</body>
</html>
