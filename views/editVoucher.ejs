<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Voucher | Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/admin.css">
</head>
<body class="admin-body">
  <%- include('admin-navbar') %>

  <div class="admin-container" style="max-width: 760px;">
    <div class="admin-title">Edit Voucher</div>
    <div class="admin-subtitle">Update voucher settings.</div>

    <div class="admin-card mt-3 admin-form">
      <form method="POST" action="/admin/vouchers/edit/<%= voucher.id %>">
        <div class="mb-3">
          <label class="form-label">Start Date (Publish At)</label>
          <input type="datetime-local" name="publish_at" class="form-control" value="<%= voucher.publish_at ? voucher.publish_at.toISOString().slice(0,16) : '' %>" required>
        </div>
        <div class="mb-3">
          <label class="form-label">End Date (Expire At)</label>
          <input type="datetime-local" name="expire_at" class="form-control" value="<%= voucher.expire_at ? voucher.expire_at.toISOString().slice(0,16) : '' %>" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Voucher Code</label>
          <input type="text" name="code" class="form-control" value="<%= voucher.code %>" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Type</label>
          <select name="type" class="form-select">
            <option value="percent" <%= voucher.type === 'percent' ? 'selected' : '' %>>Percentage</option>
            <option value="fixed" <%= voucher.type === 'fixed' ? 'selected' : '' %>>Fixed Amount</option>
          </select>
        </div>
        <div class="mb-3">
          <label class="form-label">Amount</label>
          <input type="number" name="amount" class="form-control" step="0.01" value="<%= voucher.amount %>" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Minimum Spend ($)</label>
          <input type="number" name="minSpend" class="form-control" step="0.01" value="<%= voucher.minSpend %>">
        </div>
        <div class="d-flex gap-2">
          <button class="admin-btn admin-btn-primary">Save Changes</button>
          <a href="/admin/vouchers" class="admin-btn admin-btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
