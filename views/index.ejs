<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>JellyMart</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/theme.css">
</head>

<body class="storefront">
  <%- include('navbar') %>

  <div class="container my-5">
    <div class="store-shell">
      <section class="hero-slider mb-4">
        <div class="hero-track">
          <% const heroImage = (heroImages && heroImages.length)
              ? heroImages[0]
              : 'hero-gifting.png'; %>

          <div class="hero-slide">
            <div>
              <h2>Jellycat Soft Toys, Thoughtfully Curated</h2>
              <p>Cuddly companions, whimsical characters, limited drops.</p>
              <a href="/shopping" class="pastel-btn">Shop Now</a>
            </div>
            <img src="/images/<%= heroImage %>" alt="Jellycat hero">
          </div>
        </div>
      </section>

      <section class="category-showcase mb-4">
        <div class="text-center mb-4">
          <h2 class="category-title">Jellycat Categories</h2>
          <p class="category-subtitle">Discover your next soft companion, from classic bunnies to playful amuseables.</p>
        </div>

        <div class="category-grid">
          <div class="category-card">
            <div class="category-media">
              <img src="/images/cat-bunnies.png" alt="Bunnies">
            </div>
            <div class="category-body">
              <h3>Bunnies</h3>
              <p>Soft & snuggly</p>
              <a href="/shopping?category=Bunnies" class="category-link">Shop collection →</a>
            </div>
          </div>

          <div class="category-card">
            <div class="category-media">
              <img src="/images/cat-classic.png" alt="Animals">
            </div>
            <div class="category-body">
              <h3>Animals</h3>
              <p>Cuddly friends</p>
              <a href="/shopping?category=Animals" class="category-link">Shop collection →</a>
            </div>
          </div>

          <div class="category-card">
            <div class="category-media">
              <img src="/images/cat-amuseables.png" alt="Amuseables">
            </div>
            <div class="category-body">
              <h3>Amuseables</h3>
              <p>Playful characters</p>
              <a href="/shopping?category=Amuseables" class="category-link">Shop collection →</a>
            </div>
          </div>

          <div class="category-card">
            <div class="category-media">
              <img src="/images/cat-limited.png" alt="Retired">
            </div>
            <div class="category-body">
              <h3>Retired</h3>
              <p>Limited finds</p>
              <a href="/shopping?category=Retired" class="category-link">Shop collection →</a>
            </div>
          </div>

          <div class="category-card">
            <div class="category-media">
              <img src="/images/Amuseables Peanut.png" alt="Charms">
            </div>
            <div class="category-body">
              <h3>Charms</h3>
              <p>Tiny companions</p>
              <a href="/shopping?category=Charms" class="category-link">Shop collection →</a>
            </div>
          </div>

          <div class="category-card">
            <div class="category-media">
              <img src="/images/Dust Bag MEDIUM.png" alt="Merchandise">
            </div>
            <div class="category-body">
              <h3>Merchandise</h3>
              <p>Accessories & extras</p>
              <a href="/shopping?category=Merchandise" class="category-link">Shop collection →</a>
            </div>
          </div>
        </div>
      </section>

      <section class="layout-card mb-4">
        <div class="section-title mb-3">
          <span>Shop the Store</span>
          <a href="/shopping">View all</a>
        </div>

        <form class="row g-3 align-items-end" method="GET" action="/shopping">
          <div class="col-md-3">
            <label class="small text-muted">Sort</label>
            <select class="form-select" name="sort">
              <option value="">Default</option>
              <option value="popular">Most Popular</option>
              <option value="rating">Best Rating</option>
              <option value="lowhigh">Price: Low - High</option>
              <option value="highlow">Price: High - Low</option>
            </select>
          </div>
          <div class="col-md-5">
            <label class="small text-muted">Search</label>
            <input type="text" class="form-control" name="search" placeholder="Search soft toys...">
          </div>
          <div class="col-md-3">
            <label class="small text-muted">Category</label>
            <select class="form-select" name="category">
              <option value="">All Categories</option>
              <option value="Bunnies">Bunnies</option>
              <option value="Animals">Animals</option>
              <option value="Amuseables">Amuseables</option>
              <option value="Retired">Retired</option>
              <option value="Charms">Charms</option>
              <option value="Merchandise">Merchandise</option>
            </select>
          </div>
          <div class="col-md-12 col-lg-1 d-grid">
            <button type="submit" class="pastel-btn">Apply</button>
          </div>
          <div class="col-md-12 col-lg-12">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="inStockIndex" name="inStock" value="1">
              <label class="form-check-label" for="inStockIndex">Hide sold out</label>
            </div>
          </div>
        </form>
      </section>

      <section class="layout-card">
        <div class="section-title mb-3">
          <span>Featured Products</span>
          <a href="/shopping">View all</a>
        </div>

        <% const hasProducts = products && products.length > 0; %>

        <% if (!hasProducts) { %>
          <p class="text-muted">No products available right now.</p>
        <% } else { %>
          <div class="row g-4">
            <% for (let i = 0; i < products.length; i++) { %>
              <% const item = products[i]; %>
              <div class="col-6 col-md-3">
                <div class="product-card h-100 d-flex flex-column">
                  <a href="/product/<%= item.id %>">
                    <img src="/images/<%= item.image %>" class="jc-product-img" alt="<%= item.productName %>">
                  </a>
                  <div class="mt-2">
                    <a href="/product/<%= item.id %>" class="product-name d-block"><%= item.productName %></a>
                  </div>
                  <div class="mt-1 price-main">$<%= Number(item.price).toFixed(2) %></div>
                  <div class="mt-auto pt-2">
                    <% if (item.quantity <= 0) { %>
                      <button class="pastel-secondary-btn w-100" disabled>Unavailable</button>
                    <% } else { %>
                      <form action="/add-to-cart/<%= item.id %>" method="POST" class="d-flex gap-2">
                        <input type="number" name="quantity" value="1" min="1" max="<%= item.quantity %>" class="jc-qty">
                        <button type="submit" class="pastel-btn w-100">Add</button>
                      </form>
                    <% } %>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        <% } %>
      </section>
    </div>
  </div>
</body>
</html>
