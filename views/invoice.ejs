<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Invoice | JellyMart</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/theme.css">
</head>

<body>
  <%- include('navbar') %>

  <div class="container my-5">
    <div class="section-title mb-3">
      <span>Invoice</span>
    </div>

    <div class="layout-card mb-4">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start gap-3">
        <div>
          <div class="status-pill mb-2">Payment Successful</div>
          <p class="text-muted mb-1"><strong>Date:</strong> <%= new Date(order.created_at).toLocaleString() %></p>
          <p class="text-muted mb-1"><strong>Order ID:</strong> <%= order.id %></p>
          <p class="text-muted mb-0"><strong>Payment Method:</strong> <%= order.payment_method %></p>
        </div>
        <div class="text-md-end">
          <p class="text-muted mb-1"><strong>Fulfilment:</strong> <%= order.delivery_method === 'pickup' ? 'Self-Pickup' : 'Delivery' %></p>
          <% if (order.delivery_method === 'pickup') { %>
            <p class="text-muted mb-0">Pickup at JellyMart, 123 Market Street. Daily 10:00â€“20:00.</p>
          <% } else { %>
            <p class="text-muted mb-0"><strong>Address:</strong> <%= order.address %></p>
          <% } %>
        </div>
      </div>

      <div class="d-flex justify-content-end gap-3 mt-3">
        <button onclick="window.print()" class="pastel-secondary-btn">Print</button>
        <a href="/shopping" class="pastel-btn">Continue Shopping</a>
      </div>
    </div>

    <div class="layout-card">
      <div class="table-responsive">
        <table class="table table-borderless align-middle">
          <thead class="table-light rounded">
            <tr>
              <th>#</th>
              <th>Product</th>
              <th>Image</th>
              <th>Unit Price</th>
              <th>Qty</th>
              <th>Subtotal</th>
              <th>Review</th>
            </tr>
          </thead>
          <tbody>
            <% let total = 0; %>
            <% items.forEach((item, index) => { 
              const price = Number(item.price) || 0;
              const quantity = Number(item.quantity) || 0;
              const subtotal = price * quantity;
              total += subtotal;
            %>
            <tr>
              <td><%= index + 1 %></td>
              <td class="fw-semibold"><%= item.productName %></td>
              <td><img src="/images/<%= item.image %>" width="70" class="rounded shadow-sm"></td>
              <td>$<%= price.toFixed(2) %></td>
              <td><%= quantity %></td>
              <td class="fw-semibold">$<%= subtotal.toFixed(2) %></td>
              <td><a href="/review/<%= item.product_id %>" class="pastel-btn btn-sm">Review</a></td>
            </tr>
            <% }) %>
          </tbody>
          <tfoot>
            <tr class="border-top">
              <th colspan="5"></th>
              <th class="text-end">Subtotal</th>
              <th>$<%= total.toFixed(2) %></th>
            </tr>
            <% const discount = Math.max(0, total - Number(order.total)); %>
            <% if (discount > 0) { %>
              <tr>
                <th colspan="5"></th>
                <th class="text-end text-success">Discount</th>
                <th class="text-success">-$<%= discount.toFixed(2) %></th>
              </tr>
            <% } %>
            <tr class="border-top">
              <th colspan="5"></th>
              <th class="text-end fs-5">Total</th>
              <th class="fs-5 text-primary">$<%= Number(order.total).toFixed(2) %></th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
