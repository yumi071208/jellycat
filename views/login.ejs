<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login | JellyMart</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/theme.css">
</head>

<body class="auth-page">
  <%- include('navbar') %>

  <div class="container d-flex justify-content-center mt-4">
    <div class="auth-card w-100" style="max-width: 460px;">
      <h2>Welcome back</h2>
      <p class="text-muted">Sign in to continue shopping.</p>

      <% if (typeof message !== 'undefined') { %>
        <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <form action="/login" method="POST">
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" name="email" class="form-control" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Password</label>
          <input type="password" name="password" class="form-control" required>
        </div>

        <button type="submit" class="pastel-btn w-100">Login</button>
      </form>

      <div class="text-center mt-3">
        <span class="text-muted">No account yet?</span>
        <a href="/register" class="ms-1">Create one</a>
      </div>
    </div>
  </div>
</body>
</html>
