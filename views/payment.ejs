<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>NETS Payment | JellyMart</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/theme.css">
</head>

<body>
  <%- include('navbar') %>

  <div class="container my-5" style="max-width: 650px;">
    <div class="layout-card">
      <h2 class="text-center mb-2">NETS Payment</h2>
      <p class="text-center text-muted mb-4">Scan the QR code below to complete your purchase</p>

      <h4 class="text-center mb-3">
        Total: <span class="text-primary">$<%= parseFloat(amount).toFixed(2) %></span>
      </h4>

      <p class="text-center text-muted"><strong>Order ID:</strong> <%= orderId %></p>

      <div class="qr-wrapper text-center my-4">
        <img src="<%= qrImage || qrCode || '/images/paynowqr.png' %>" class="qr-img" alt="QR Code" style="max-width: 300px; height: auto;">
      </div>

      <p id="timer" class="text-center text-danger"><strong>Time remaining: 5:00</strong></p>

      <div class="text-center mt-3">
        <a href="/checkout" class="pastel-secondary-btn">Cancel</a>
      </div>
    </div>
  </div>

  <script>
    const paymentId = "<%= paymentId %>";
    const orderId = "<%= orderId %>";
    let checkInterval;

    function checkPaymentStatus() {
      fetch(`/payment/nets/status/${paymentId}`)
        .then(res => res.json())
        .then(data => {
          if (data.success && (data.status === 'SUCCESS' || data.status === 'COMPLETED' || data.status === 'AUTHORIZED')) {
            clearInterval(checkInterval);
            clearInterval(timerInterval);
            window.location.href = `/payment/nets/success?payment_id=${paymentId}`;
          }
        })
        .catch(err => console.error('Status check failed:', err));
    }

    checkInterval = setInterval(checkPaymentStatus, 2000);

    const timerElement = document.getElementById('timer');
    const countdownDuration = 300;
    let remainingTime = countdownDuration;

    const updateTimer = () => {
      const minutes = Math.floor(remainingTime / 60);
      const seconds = remainingTime % 60;
      timerElement.textContent = `Time remaining: ${minutes}:${seconds.toString().padStart(2, '0')}`;
      remainingTime--;

      if (remainingTime < 0) {
        clearInterval(timerInterval);
        clearInterval(checkInterval);
        timerElement.textContent = 'Transaction timed out.';
        window.location.href = `/payment/nets/failed?error=Timeout`;
      }
    };

    const timerInterval = setInterval(updateTimer, 1000);
    updateTimer();
  </script>
</body>
</html>
