<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= product.productName %> | JellyMart</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/theme.css">
</head>

<body>
  <%- include('navbar') %>

  <div class="container my-5" style="max-width: 980px;">
    <div class="section-title mb-3">
      <span><%= product.productName %></span>
      <a href="/shopping">Back to shop</a>
    </div>

    <div class="layout-card mb-5">
      <div class="row align-items-center">
        <div class="col-md-5 text-center mb-3 mb-md-0">
          <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="img-fluid" style="max-height: 300px; object-fit: contain;">
        </div>

        <div class="col-md-7">
          <div class="mb-2">
            <span class="price-main fs-4" id="product-price" data-base-price="<%= Number(product.price).toFixed(2) %>">
              $<%= Number(product.price).toFixed(2) %>
            </span>
          </div>

          

          

          <div class="mt-4">
            <form action="/add-to-cart/<%= product.id %>" method="POST" class="d-flex flex-column gap-2" id="product-add-form">
              <div class="d-flex gap-2 align-items-center">
                <input type="number" name="quantity" value="1" min="1" max="<%= product.quantity %>" class="jc-qty">
                <button type="submit" class="pastel-btn">Add to Cart</button>
              </div>
              <label class="form-check small text-muted">
                <input class="form-check-input me-1" type="checkbox" name="add_dust_bag" value="1" id="dust-bag-toggle">
                Add dust bag +$3
              </label>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="layout-card">
      <div class="section-title mb-3">
        <span>Product Details</span>
      </div>
      <p class="text-muted">Details coming soon.</p>
    </div>
  </div>

  <script>
    (function () {
      const priceEl = document.getElementById("product-price");
      const dustToggle = document.getElementById("dust-bag-toggle");
      if (!priceEl || !dustToggle) return;

      const basePrice = parseFloat(priceEl.dataset.basePrice || "0");
      const updatePrice = () => {
        const addOn = dustToggle.checked ? 3 : 0;
        const total = basePrice + addOn;
        priceEl.textContent = `$${total.toFixed(2)}`;
      };

      dustToggle.addEventListener("change", updatePrice);
      updatePrice();
    })();
  </script>
</body>
</html>
