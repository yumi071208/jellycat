<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= product.productName %> | JellyMart</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles/theme.css">
</head>

<body>
  <%- include('navbar') %>

  <div class="container my-5" style="max-width: 980px;">
    <div class="section-title mb-3">
      <span><%= product.productName %></span>
      <a href="/shopping">Back to shop</a>
    </div>

    <div class="layout-card mb-5">
      <div class="row align-items-center">
        <div class="col-md-5 text-center mb-3 mb-md-0">
          <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="img-fluid" style="max-height: 300px; object-fit: contain;">
        </div>

        <div class="col-md-7">
          <div class="mb-2">
            <span class="price-main fs-4">$<%= Number(product.price).toFixed(2) %></span>
          </div>

          <p class="mb-2"><strong>Available stock:</strong> <%= product.quantity %></p>

          <p class="mb-3">
            <%
              let reviewCount = reviews.length;
              let averageRating = reviewCount > 0
                ? (reviews.reduce((sum, r) => sum + r.rating, 0) / reviewCount)
                : 0;
            %>
            <strong>Rating:</strong>
            <% if (reviewCount > 0) { %>
              <%= averageRating.toFixed(1) %> / 5
              <span class="text-muted">(<%= reviewCount %> reviews)</span>
            <% } else { %>
              <span class="text-muted">No ratings yet</span>
            <% } %>
          </p>

          <% if (product.quantity <= 0) { %>
            <p class="text-danger fw-semibold">This item is currently sold out.</p>
          <% } else if (product.quantity <= 5) { %>
            <p class="text-warning fw-semibold">Only <%= product.quantity %> left in stock.</p>
          <% } %>

          <div class="mt-4 d-flex gap-2 flex-wrap">
            <% if (canReview) { %>
              <a href="/review/<%= product.id %>" class="pastel-btn">Write a review</a>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <div class="layout-card">
      <div class="section-title mb-3">
        <span>Customer Reviews</span>
      </div>

      <% if (reviews.length === 0) { %>
        <p class="text-muted">No reviews yet for this product.</p>
      <% } %>

      <% reviews.forEach(r => { %>
        <div class="card-soft mb-3">
          <div class="d-flex justify-content-between">
            <strong><%= r.username %></strong>
            <span><%= r.rating %> / 5</span>
          </div>
          <div class="mt-2 text-muted"><%= r.comment %></div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
