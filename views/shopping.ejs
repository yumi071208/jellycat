<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>JellyMart Shopping</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/styles/theme.css">
</head>

<body class="shopping-page">
  <%- include('navbar') %>

  <div class="container my-5">
    <div class="hero-banner mb-4">
      <div>
        <h2>Everyday Essentials, Thoughtfully Curated</h2>
        <p class="mb-2">Fresh groceries. Honest pricing. Limited stock.</p>
        <a href="#shop" class="pastel-btn">Shop Now</a>
      </div>
      <div class="text-end d-none d-md-block">
        <span class="store-pill">Daily Restocks</span>
      </div>
    </div>

    <form class="row g-3 align-items-end mb-4" method="GET" action="/shopping">
      <div class="col-md-3">
        <label class="small text-muted">Sort</label>
        <select class="form-select" name="sort">
          <option value="">Default</option>
          <option value="popular" <%= sort === 'popular' ? 'selected' : '' %>>Most Popular</option>
          <option value="rating" <%= sort === 'rating' ? 'selected' : '' %>>Best Rating</option>
          <option value="lowhigh" <%= sort === 'lowhigh' ? 'selected' : '' %>>Price: Low - High</option>
          <option value="highlow" <%= sort === 'highlow' ? 'selected' : '' %>>Price: High - Low</option>
        </select>
      </div>

      <div class="col-md-5">
        <label class="small text-muted">Search</label>
        <input type="text" class="form-control" name="search" placeholder="Search groceries..." value="<%= search || '' %>">
      </div>

      <div class="col-md-3">
        <label class="small text-muted">Category</label>
        <select class="form-select" name="category">
          <option value="">All Categories</option>
          <option value="Snacks" <%= category === 'Snacks' ? 'selected' : '' %>>Snacks</option>
          <option value="Beverages" <%= category === 'Beverages' ? 'selected' : '' %>>Beverages</option>
          <option value="Vegetables" <%= category === 'Vegetables' ? 'selected' : '' %>>Vegetables</option>
          <option value="Fruits" <%= category === 'Fruits' ? 'selected' : '' %>>Fruits</option>
          <option value="Household" <%= category === 'Household' ? 'selected' : '' %>>Household</option>
          <option value="Meats" <%= category === 'Meats' ? 'selected' : '' %>>Meats</option>
          <option value="Alcohol" <%= category === 'Alcohol' ? 'selected' : '' %>>Alcohol</option>
        </select>
      </div>

      <div class="col-md-1 d-grid">
        <button type="submit" class="pastel-btn">Apply</button>
      </div>
    </form>

    <% const hasProducts = products && products.length > 0; %>

    <% if (vouchers && vouchers.length > 0) { %>
      <div class="layout-card mb-5">
        <div class="section-title mb-3">
          <span>Available Vouchers</span>
        </div>

        <div class="row g-3">
          <% vouchers.forEach(v => { %>
            <div class="col-md-4">
              <div class="jc-voucher-card h-100">
                <h6 class="mb-1"><%= v.code %></h6>
                <p class="mb-1">
                  <%= v.type === 'percent' ? v.amount + '% OFF' : '$' + v.amount + ' OFF' %>
                </p>
                <p class="small text-muted mb-1">Min Spend: $<%= Number(v.minSpend).toFixed(2) %></p>
                <p class="small text-muted mb-2">Expiry: <%= new Date(v.expire_at).toISOString().slice(0,10) %></p>

                <form method="POST" action="/apply-voucher">
                  <input type="hidden" name="voucherCode" value="<%= v.code %>">
                  <button class="jc-voucher-btn">Apply Voucher</button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    <% } %>

    <div class="layout-card" id="shop">
      <div class="section-title mb-3">
        <span>Products</span>
      </div>

      <% if (!hasProducts) { %>
        <p class="text-muted">No products found.</p>
      <% } else { %>
        <div class="row g-4">
          <% for (let i = 0; i < products.length; i++) { %>
            <% const stock = products[i].quantity; %>
            <% const soldOut = stock <= 0; %>
            <% const lowStock = stock > 0 && stock <= 5; %>

            <div class="col-6 col-md-3">
              <div class="product-card h-100 d-flex flex-column">
                <a href="/product/<%= products[i].id %>">
                  <img src="/images/<%= products[i].image %>" class="jc-product-img" alt="<%= products[i].productName %>">
                </a>

                <div class="mt-2">
                  <a href="/product/<%= products[i].id %>" class="product-name d-block"><%= products[i].productName %></a>
                </div>

                <div class="mt-1 price-main">$<%= Number(products[i].price).toFixed(2) %></div>

                <% if (soldOut) { %>
                  <p class="text-danger mt-2">Sold Out</p>
                <% } else if (lowStock) { %>
                  <p class="text-warning mt-2">Only <%= stock %> left</p>
                <% } %>

                <div class="mt-auto pt-2">
                  <% if (soldOut) { %>
                    <button class="pastel-secondary-btn w-100" disabled>Unavailable</button>
                  <% } else { %>
                    <form action="/add-to-cart/<%= products[i].id %>" method="POST" class="d-flex gap-2">
                      <input type="number" name="quantity" value="1" min="1" max="<%= stock %>" class="jc-qty">
                      <button type="submit" class="pastel-btn w-100">Add</button>
                    </form>
                  <% } %>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
